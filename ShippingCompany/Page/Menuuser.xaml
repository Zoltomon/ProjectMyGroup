<Page x:Class="ShippingCompany.Page.DataView.Menuuser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShippingCompany.Page.DataView"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Menuuser">

    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock Name="TxbLoginUser" Text="Имя пользователя" Style="{StaticResource TxbName}"/>
            <Button Content="Информация о круизах" Name="BtnCruise" Click="BtnCruise_Click"/>
            <Button Content="Информация о компании" Name="BtnCompany"/>
            <Button Content="Выход" Name="Btnback" />
        </StackPanel>
    </Grid>
</Page>
